#include <dt-bindings/interrupt-controller/irq.h>

/dts-v1/;
/plugin/;

/ {
	compatible = "nextthing,chip", "allwinner,sun5i-r8", "allwinner,sun5i-a13";

	fragment@0{
		target-path = "/";

		__overlay__ {
			hdmi_connector: connector {
				compatible = "hdmi-connector";
				label = "hdmi";

				type = "a";

				ddc-i2c-bus = <&i2c1>;

				port {
					hdmi_in: endpoint@0 {
						remote-endpoint = <&hdmi_output>;
					};
				};
			};
		};
	};

	fragment@1{
		target = <&i2c1>;

		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			hdmi-bridge@76 {
				compatible = "chrontel,ch7033";
				reg = <0x76>;

				ports {

					port@0 {
						reg = <0>;

						hdmi_input: endpoint {
							remote-endpoint = <&tcon0_out_hdmi>;
						};
					};

					port@1 {
						reg = <1>;

						hdmi_output: endpoint {
							remote-endpoint = <&hdmi_in>;
						};
					};
				};
			};
		};
	};

	fragment@2{
		target = <&tcon0>;

		__overlay__ {
			pinctrl-names = "default";
			pinctrl-0 = <&lcd_rgb565_pins>;
		};
	};

	fragment@3{
		target = <&tcon0_out>;

		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			tcon0_out_hdmi: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&hdmi_input>;
				allwinner,tcon-channel = <0>;
			};
		};
	};

	fragment@4{
		target = <&spi2>;

		__overlay__ {
			status = "okay";

			pinctrl-names = "default";
			pinctrl-0 = <&spi2_pe_pins &spi2_cs0_pe_pin>;

			ethernet@0 {
				compatible = "encx24j600";
				reg = <0>;
				spi-max-frequency = <12000000>;
				interrupt-parent = <&pio>;
				interrupts = <6 1 IRQ_TYPE_LEVEL_LOW>;
			};
		};
	};
};
